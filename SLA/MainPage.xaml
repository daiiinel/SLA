<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SLA.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label
                x:Name="BienvenidaLabel"
                FontSize="20"
                HorizontalOptions="Center" />

            <Button
                Text="Registrar inicio"
                Clicked="OnInicioClicked" />

            <Button
                Text="Registrar cierre"
                Clicked="OnCierreClicked" />

            <Button
                x:Name="HistorialButton"
                Text="Ver historial"
                Clicked="OnVerHistorialClicked" />  

            <Button
                Text="Cerrar sesión"
                Clicked="OnLogoutClicked" />

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
