<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SLA.Views.HistorialPage"
    Title="Historial de Sesiones">

    <VerticalStackLayout Padding="20" Spacing="10">

        <Label
            Text="Historial"
            FontSize="22"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

        <CollectionView x:Name="HistorialView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout>
                            <Label Text="{Binding Usuario}" FontAttributes="Bold" />
                            <Label Text="{Binding FechaHora}" FontSize="12" />
                            <Label Text="{Binding Tipo}" />
                            <Label Text="{Binding Observacion}" FontSize="11" />
                        </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
