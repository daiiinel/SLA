<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SLA.Views.HistorialPage"
    Title="Historial de Sesiones">

    <VerticalStackLayout Padding="20" Spacing="10">

        <Label
            Text="Historial"
            FontSize="22"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

        <CollectionView x:Name="HistorialView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10" Margin="5" >
                        <VerticalStackLayout>
                                <Label Text="{Binding Fecha}" FontAttributes="Bold" />
                                <Label Text="{Binding TipoMovimiento}" />
                                <Label Text="{Binding Unidad}" FontSize="12" />
                                <Label Text="{Binding Operador}" FontSize="12" />
                                <Label Text="{Binding Observaciones}" FontSize="11" />
                            </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
