<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SLA.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:SLA.ViewModels">

    <ContentPage.BindingContext>
        <vm:DashboardViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label 
            Text="{Binding Usuario}"
            FontSize="22"
            FontAttributes="Bold" />

        <Label 
            Text="{Binding Rol}"
            FontSize="16"
            TextColor="Gray" />

        <!-- OPERADOR -->
        <Button
            Text="Nuevo registro"
            FontSize="18"
            HeightRequest="55"
            IsVisible="{Binding IsOperador}" 
            Command="{Binding NuevoRegistroCommand}"/> <!--prox accion-->

        <!-- JEFE -->
        <Button
            Text="Consultar reportes"
            IsVisible="{Binding IsJefe}" />

        <!-- AUDITOR -->
        <Button
            Text="Ver registros históricos"
            IsVisible="{Binding IsAuditor}" 
            Command="{Binding VerHistorialCommand}"/>

        <Button
            Text="Cerrar sesión"
            Command="{Binding CerrarSesionCommand}"
            BackgroundColor="DarkRed"
            TextColor="White" />

    </VerticalStackLayout>
</ContentPage>
