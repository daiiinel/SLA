<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:SLA.ViewModels"
    x:Class="SLA.Views.NuevoRegistroPaso2Page"
    Title="Nuevo registro – Paso 2">

    <ContentPage.BindingContext>
        <vm:NuevoRegistroPaso2ViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="12">

        <Label
            Text="Detalle de armas / inventario"
            FontSize="22"
            FontAttributes="Bold" />

        <!-- Tipo de ítem -->
        <Label Text="Tipo" />
        <Picker
            Title="Seleccione"
            ItemsSource="{Binding TiposItem}"
            SelectedItem="{Binding TipoItem}" />

        <!-- Descripción -->
        <Label Text="Descripción" />
        <Entry
            Placeholder="Ej: Pistola Bersa TPR9"
            Text="{Binding Descripcion}" />

        <!-- Cantidad -->
        <Label Text="Cantidad" />
        <Entry
            Keyboard="Numeric"
            Placeholder="Ej: 5"
            Text="{Binding Cantidad}" />

        <!-- Agregar -->
        <Button
            Text="Agregar a la lista"
            Command="{Binding AgregarItemCommand}" />

        <!-- Lista -->
        <CollectionView ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="8"
                            Margin="0,4"
                            StrokeThickness="0">
                        <VerticalStackLayout>
                            <Label Text="{Binding Descripcion}" FontAttributes="Bold" />
                            <Label Text="{Binding Resumen}" FontSize="12" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- continuar -->
        <Button
            Text="Continuar"
            FontSize="18"
            HeightRequest="55"
            Command="{Binding ContinuarCommand}" />

    </VerticalStackLayout>
</ContentPage>
